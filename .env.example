# ===========================================
# CRM GOOGLE - Variables de Entorno
# ===========================================

# API Configuration
# Clave de API para Gemini AI
# Obtener desde: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# PostgreSQL Configuration
# URL completa de conexión a la base de datos PostgreSQL
# Formato: postgres://usuario:contraseña@host:puerto/base_de_datos?sslmode=modo
DATABASE_URL=postgres://admin:admin@ibidem_bot_new-crm-db:5432/admin?sslmode=disable

# Configuración individual de PostgreSQL (alternativa a DATABASE_URL)
# IMPORTANTE: Usar credenciales seguras en producción
DB_HOST=postgres
DB_PORT=5432
DB_NAME=crm_db
DB_USER=crm_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Application Configuration
# Entorno de ejecución: development, staging, production
NODE_ENV=production

# Puerto en el que se ejecutará la aplicación
PORT=3000

# URL pública de la aplicación (necesaria para notificaciones y enlaces)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Connection Settings
# Tiempo de espera para conexión a la base de datos (en milisegundos)
DB_CONNECTION_TIMEOUT=10000

# Número máximo de conexiones simultáneas a la base de datos
DB_MAX_CONNECTIONS=20

# Tiempo de inactividad antes de cerrar una conexión (en milisegundos)
DB_IDLE_TIMEOUT=30000

# Development Settings
# Usar datos de simulación en desarrollo (true/false)
# IMPORTANTE: Establecer en 'false' para producción para usar la base de datos real
USE_MOCK_DATA=false

# Logging Configuration
# Nivel de logging: error, warn, info, debug
LOG_LEVEL=info

# Habilitar logging de consultas a la base de datos (true/false)
DB_QUERY_LOGGING=false

# Security Settings
# Secreto para firmar tokens JWT (¡IMPORTANTE! Generar uno seguro para producción)
# Comando para generar un secreto seguro: openssl rand -base64 32
JWT_SECRET=GENERATE_SECURE_JWT_SECRET_FOR_PRODUCTION

# Tiempo de expiración del token JWT (en horas)
JWT_EXPIRES_IN=24h

# Contraseña de administrador para la aplicación
# IMPORTANTE: Cambiar esta contraseña en producción
ADMIN_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# CORS Settings
# Orígenes permitidos para CORS (separados por comas)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Notification Settings
# URL del endpoint de notificaciones
NOTIFICATION_ENDPOINT_URL=https://your-notification-service.com/webhook

# Clave de API para el servicio de notificaciones
NOTIFICATION_API_KEY=your_notification_api_key

# Email Configuration (opcional)
# Servidor SMTP para envío de correos
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com

# Redis Configuration (opcional, para caché y sesiones)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Settings
# Tamaño máximo de archivo (en bytes)
MAX_FILE_SIZE=5242880

# Directorio para archivos subidos
UPLOAD_DIR=./uploads

# Feature Flags
# Habilitar características experimentales (true/false)
ENABLE_EXPERIMENTAL_FEATURES=false

# Analytics (opcional)
# ID de seguimiento de Google Analytics
GA_TRACKING_ID=

# Monitoring (opcional)
# URL de webhook para monitorización
HEALTH_CHECK_WEBHOOK_URL=